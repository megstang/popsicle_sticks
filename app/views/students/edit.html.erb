<%= form_with url: "/mods/#{@student.mod.id}/students/#{@student.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: @student.name%>

  <%= form.label :pronouns %>
  <%= form.text_field :pronouns, value: @student.pronouns %>

  <%= form.submit 'Update Student' %>
<% end %>

<%= button_to "Move To Previous Mod", "/mods/#{@student.mod.id}/students/#{@student.id}/repeat_student", form: { data: { turbo_confirm: "Are you sure you want to move this student to the previous mod?" } }, method: :patch %>